{
  "compilerOptions": {
    "module": "es6",
    "allowJs": true,
    "target": "es6",
    "experimentalDecorators": true,
    "moduleResolution":"node",
    "emitDecoratorMetadata": true,
    "noEmitHelpers": true,
    "importHelpers":true,
    "sourceMap": true
  },
  "exclude": [
    "node_modules"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "useCache": true
  }
}
